    "prepublishOnly": "pnpm build",
    "preview": "vite preview"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@vitest/browser": "^1.6.0",
    "idb": "^8.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.3.4",
    "vitest": "^1.6.0",
    "webdriverio": "^8.39.1",
    "zx": "^7.2.3"
  }
