{
  "name": "opfs-tools",
  "repository": "https://github.com/hughfenghen/opfs-tools",
  "keywords": [
    "OPFS",
    "fs",
    "filesystem",
    "file",
    "read",
    "write",
    "browser",
    "Web",
    "tools",
    "文件系统",
    "文件读写"
  ],
  "version": "0.7.1",
  "type": "module",
  "module": "dist/opfs-tools.js",
  "main": "dist/opfs-tools.umd.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/opfs-tools.js",
      "require": "./dist/opfs-tools.umd.cjs"
    }
  },
  "scripts": {
